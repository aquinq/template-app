{
  "compilerOptions": {
    "outDir": "wwwroot/dist/",
    "sourceMap": true,
    "module": "commonjs",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "client/*": ["client/*"],
      "wwwroot/*": ["wwwroot/*"]
    },
    "target": "es5",
    "lib": ["es5", "es6", "dom"]
  },
  "max-line-length": [true, 120],
  "exclude": ["node_modules"],
  "include": ["client/**/*"]
}
